#ifndef LCD_LCD_CONFIG_H_
#define LCD_LCD_CONFIG_H_

/* LCD data length MODE select (type 8 for 8-bit mode, 4 for 4-bit mode  */
#define MODE 8

/* LCD HW Pins */
#define RS PIN0
#define RW PIN1
#define EN  PIN2
#define LCD_CTRL_PORT PORTC

#define LCD_DATA_PORT PORTA

/* LCD Commands */
#define CLEAR_DISPLAY 0x01
#define TWO_LINE_LCD_Eight_BIT_MODE 0x38
#define DIPLAY_ON 0b00001110
#define DISPLAY_ORG 0x80
#define LINE_OFFSET 30
#define SCROLL_LEFT    0b00011000
#define SCROLL_RIGHT   0b00011100
#define RIGHT  1
#define LEFT   0

#define CGRAM_BASE 0x40

#endif /* LCD_LCD_CONFIG_H_ */
