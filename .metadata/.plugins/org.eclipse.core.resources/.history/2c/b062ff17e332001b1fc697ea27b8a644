#include "LIB/STD_TYPES.h"
#include <util/delay.h>

typedef struct
{
	volatile u8 PIN;
	volatile u8 DDR;
	volatile u8 PORT;
}PORT_t;

#define PORTA ((volatile PORT_t*)(0x39)) //address of PINA






int main(void)
{

	PORTA->DDR = 0x01;
	PORTA->PORT=0x02; //pull up resistor on A1
	while(1)
	{
		if(((PORTA->PIN>>1)&1) == 0) //button pressed
		{
			PORTA->PORT=0x01;
			_delay_ms(500);
		}
		else
		{
			PORTA->PORT=0x00;
		}

	}


}
